<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/highlite_details"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_status"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/status"
        android:background="@color/bg_listview_pressed" />

    <RelativeLayout
        android:id="@+id/progress1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/divider1"
        android:layout_gravity="center"
        android:background="@drawable/highlite_details"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/progress1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_volumes"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/progress1Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/progress1Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/progress1Text1"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progress2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@id/progress1"
        android:layout_gravity="center"
        android:background="@drawable/highlite_details"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_listview_pressed" />

        <TextView
            android:id="@+id/progress2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_chapters"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/progress2Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/progress2Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/progress2Text1"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>