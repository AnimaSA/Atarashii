<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/progresslabel1Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/progresslabel1Current"
        android:layout_alignParentRight="true"
        android:text="/?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/progresslabel1Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/progresslabel1Total"
        android:text="24"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/progresslabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/progresslabel1Current"
        android:layout_alignBottom="@+id/progresslabel2Current"
        android:layout_alignParentLeft="true"
        android:text="@string/card_content_volumes"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/progresslabel2Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/progresslabel2Current"
        android:layout_alignParentRight="true"
        android:text="/?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/progresslabel2Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@id/progresslabel1Current"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/progresslabel2Total"
        android:text="24"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/progresslabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/progresslabel2Current"
        android:layout_alignBottom="@+id/progresslabel2Current"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:text="@string/card_content_chapters"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>