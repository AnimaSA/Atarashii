<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="66dp"
    android:layout_gravity="bottom"
    android:background="@color/panel_griditem"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/animeName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Anime Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:baselineAlignedChildIndex="2"
        android:clipChildren="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/popUpButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/igf_grid_selector"
            android:focusable="false"
            android:paddingRight="22dp"
            android:scaleType="center"
            android:src="@drawable/cover_action" />

        <TextView
            android:id="@+id/stringWatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="I&apos;ve watched:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/watchedCount"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="111"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="32sp" />
    </LinearLayout>
</LinearLayout>