<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/igf_grid_selector"
        android:scaleType="centerCrop"
        android:src="@drawable/cover_loading" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/panel_griditem"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:paddingLeft="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp">

        <TextView
            android:id="@+id/animeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginRight="26dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Anime Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/stringWatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/animeName"
            android:layout_gravity="bottom"
            android:text="I&apos;ve watched:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/watchedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animeName"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/stringWatched"
            android:layout_toRightOf="@+id/stringWatched"
            android:text="111"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/popUpButton"
            android:layout_width="36dp"
            android:layout_height="60dp"
            android:background="@drawable/igf_grid_selector"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"
            android:padding="4dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/changeRecord"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/panel_griditem"
        android:scaleType="fitCenter"
        android:src="@drawable/abc_ic_clear_mtrl_alpha"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>